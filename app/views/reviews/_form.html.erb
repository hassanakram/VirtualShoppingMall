<%= form_for [@product, @review], remote: true do |f| %>
  <div class="row">
    <div class="form-group col-lg-4">
      <%= f.label :review %>
      <%= f.text_area :review, required: true, rows: 5, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Submit Review", class: "btn btn-success" %>
  </div>
<% end %>
