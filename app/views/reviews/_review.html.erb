
<% unless review.new_record? %>
  <div id="review_<%= review.id %>" >
    <p>
      <b>Review:</b>
      <%= review.review %>
    </p>
    <% if authorised_owner(review.product.user_id) %>
      <%= link_to 'Destroy' , [review.product, review], remote: true, method: :delete,  data: { confirm: 'Are you sure?' } %>
    <% elsif authorised_owner(review.user_id) %>
      <%= link_to 'Edit', edit_product_review_path(review.product_id, review), remote: true %> |
      <%= link_to 'Destroy' , [review.product, review], remote: true, method: :delete,  data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
<% end %>
