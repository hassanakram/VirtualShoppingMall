<h1>Listing products</h1>
<%= paginate @products %>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.title %></td>
    <td><%= product.body %></td>
    <td><%= product.price %></td>
    <td><%= link_to 'Show', product %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path %>
